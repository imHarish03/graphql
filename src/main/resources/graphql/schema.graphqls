type Department {
  id: ID
  name: String
}

type Employee {
  id: ID
  name: String
  email: String
  department: Department
}

type Query {
  allEmployees: [Employee]
  employeeById(id: ID): Employee
  employeesByDepartmentId(departmentId: ID!): [Employee]
}


type Mutation {
  createEmployee(name: String!, email: String!, departmentId: ID!): Employee
}


